{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


    <div class="" style="margin-top: 5rem; margin-bottom: 3rem;">

        <div class="row">
            <div class="col-4 mx-auto">

                <div class="card p-3" style="transform: translateY(50%)">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-5 text-center font-weight-normal">Please sign in</h1>

                        <div class="mb-3">
                            <label for="inputEmail" class="form-label ms-auto">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div >
                            <label for="inputPassword" class="form-label">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox ms-2">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>

                        <div class="d-grid mt-4">
                            <button class="btn btn-primary px-4" type="submit">Sign in</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>



    </div>




{% endblock %}
