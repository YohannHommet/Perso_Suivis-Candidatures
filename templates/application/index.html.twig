{% extends 'base.html.twig' %}

{% block title %}Applications | Register{% endblock %}

{% block body %}

    <div class="text-center" style="margin-top: 5rem; margin-bottom: 3rem;">
        <h1>Liste des Candidatures</h1>
        <button type="button" class="btn btn-info px-4" data-bs-toggle="modal" data-bs-target="#applicationModal">
            <i class="fas fa-plus"></i>
        </button>
    </div>

    <div class="applications p-4">

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Nom Entreprise</th>
                <th scope="col">Localisation</th>
                <th scope="col">Poste Recherch√©</th>
                <th scope="col">Lien de l'annonce</th>
                <th scope="col">Nature Candidature</th>
                <th scope="col">Date Candidature</th>
                <th scope="col">Email de Contact</th>
                <th scope="col">Technos</th>
                <th scope="col">Remarques</th>
            </tr>
            </thead>
            <tbody>
            {% for application in applications %}
                <tr>
                    <td>{{ application.nomEntreprise }}</td>
                    <td>{{ application.localisationEntreprise }}</td>
                    <td>{{ application.posteRecherche }}</td>
                    <td>{{ application.lienCandidature }}</td>
                    <td>{{ application.natureCandidature }}</td>
                    <td>{{ application.dateCandidature | date('d/m/Y') }}</td>
                    <td>{{ application.emailContact }}</td>
                    <td>{{ application.technos }}</td>
                    <td>{{ application.remarques | u.truncate(10, '...', false) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>



    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="applicationModal" tabindex="-1" aria-labelledby="applicationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="applicationModalLabel">Ajouter une candidature</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.nom_entreprise) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.localisation_entreprise) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.poste_recherche) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                {{ form_row(form.lien_candidature) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.nature_candidature) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.date_candidature) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                {{ form_row(form.email_contact) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.technos) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.remarques) }}
                            </div>
                        </div>

                        <div class="mt-3 d-flex justify-content-end">
                            <button class="btn btn-info px-5" type="submit">Go</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>






{% endblock %}

