{% extends 'base.html.twig' %}

{% block title %}{{ application.nomEntreprise }} | Details{% endblock %}

{% block body %}

    <div class="text-center" style="margin-top: 5rem; margin-bottom: 3rem;">
        <h1>{{ application.nomEntreprise }}</h1>
        <button type="button" class="btn btn-info px-4" data-bs-toggle="modal" data-bs-target="#applicationModal">
            <i class="fas fa-plus"></i>
        </button>
    </div>

    <div class="container">

        <ul class="list-group list-group-flush shadow-sm px-3">
            <li class="list-group-item py-3"><strong>Nom Entreprise : </strong>{{ application.nomEntreprise }}</li>
            <li class="list-group-item py-3"><strong>Localisation : </strong>{{ application.localisationEntreprise }}</li>
            <li class="list-group-item py-3"><strong>Poste Recherch√© : </strong>{{ application.posteRecherche }}</li>
            <li class="list-group-item py-3"><strong>Lien de l'annonce : </strong>{{ application.lienCandidature }}</li>
            <li class="list-group-item py-3"><strong>Nature Candidature : </strong>{{ application.natureCandidature }}</li>
            <li class="list-group-item py-3"><strong>Date Candidature : </strong>{{ application.dateCandidature | date('d/m/Y') }}</li>
            <li class="list-group-item py-3"><strong>Email de Contact : </strong>{{ application.emailContact }}</li>
            <li class="list-group-item py-3"><strong>Technos : </strong>{{ application.technos }}</li>
            <li class="list-group-item py-3"><strong>Remarques : </strong>{{ application.remarques }}</li>
        </ul>

    </div>


{% endblock %}
