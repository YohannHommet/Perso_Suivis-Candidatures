{% for label, messages in app.flashes %}
    {% for message in messages %}

        <div class="alert alert-{{ label }} alert-dismissible fade show rounded-0" role="alert" id="flash">
            <strong>Holy Moly ! </strong> {{ message }}
          <button type="button" class="btn-close px-4" data-bs-dismiss="alert" aria-label="Close"></button>
            </button>
        </div>

    {% endfor %}
{% endfor %}