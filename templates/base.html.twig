        <script defer src="{{ asset('assets/js/app.js') }}"></script>
        <script defer src="{{ asset('assets/js/turbo.js') }}"></script>
    {% endblock %}    
    </head>
<body>

    {% include '_partials/_navbar.html.twig' %}

    <div class="container-fluid p-0 m-0 g-0">
        {% include '_partials/_flash_message.html.twig' %}

        <main role="main" class="bg">
            {% block body %}
            {% endblock %}
        </main>

        {% include '_partials/_footer.html.twig' %}
    </div>

</body>
</html>